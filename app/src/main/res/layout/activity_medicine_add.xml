<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_medicine_add"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="vertical"
    tools:context="sg.edu.nus.medipalapplication.activity.MedicineAddActivity">

    <LinearLayout
        android:id="@+id/relativelayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/AddMedicineName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Meddicine Name" />
        </android.support.design.widget.TextInputLayout>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/AddMedicineDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Meddicine Description" />
        </android.support.design.widget.TextInputLayout>

        <Spinner
            android:id="@+id/AddMedicineCatId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"></Spinner>

        <android.support.design.widget.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:id="@+id/AddMedicineRemindId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Meddicine Remind Id" />
        </android.support.design.widget.TextInputLayout>

        <LinearLayout
            android:layout_width="370dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="20dp">

            <TextView
                android:id="@+id/remindername"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reminder"
                android:textSize="20dp" />

            <android.support.v7.widget.SwitchCompat
                android:id="@+id/AddMedicineRemind"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:paddingLeft="200dp"
                android:textSize="20dp"
                android:theme="@style/MySwitch" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/AddMedicineQuantity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Quantity" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/AddMedicineDosage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Dosage" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/AddMedicineDateIssued"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date Issued" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/AddMedicineExpire"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Expire Date" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/AddMedicineConsumeQuality"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Consume Quality" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:id="@+id/AddMedicineThreshold"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Threshold" />
            </android.support.design.widget.TextInputLayout>

            <Button
                android:id="@+id/MedicineSave"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save2" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>

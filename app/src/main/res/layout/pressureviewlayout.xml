<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/pressurecardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_marginBottom="16dp"
    card_view:contentPadding="30dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/systolicdisplayview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:hint="Systolic"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Textsystolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_toRightOf="@id/systolicdisplayview"
            android:paddingLeft="100dp"
            android:paddingTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/diastolicdisplayview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/systolicdisplayview"
            android:hint="Diastolic"
            android:paddingTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/Textdiastolic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Textsystolic"
            android:layout_toRightOf="@id/diastolicdisplayview"
            android:paddingLeft="100dp"
            android:paddingTop="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/MeasuredOndisplayview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@id/diastolicdisplayview"
            android:hint="measuredon"
            android:paddingTop="10dp" />

        <TextView
            android:id="@+id/TextmeasuredOn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/Textdiastolic"
            android:layout_toRightOf="@id/MeasuredOndisplayview"
            android:paddingLeft="100dp"
            android:paddingTop="10dp"
            android:textStyle="bold" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
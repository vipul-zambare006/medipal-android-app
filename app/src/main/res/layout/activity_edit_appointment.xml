<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="sg.edu.nus.medipalapplication.activity.EditAppointmentActivity">
    <LinearLayout
        android:layout_width="368dp"
        android:layout_height="495dp"
        android:orientation="vertical"
        android:baselineAligned="false"
        android:weightSum="1"
        tools:layout_editor_absoluteY="8dp"
        tools:layout_editor_absoluteX="8dp">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointment"
            android:textAlignment="center"
            android:textSize="30sp"
            android:padding="15dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/txtAptLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/aptLocation"
            android:ems="10"
            android:padding="15dp"
            android:hint="Enter location"
            android:inputType="none"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/txtDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/aptDescription"
            android:layout_alignBottom="@+id/aptDescription"
            android:layout_alignLeft="@+id/txtDateAndTime"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignStart="@+id/txtDateAndTime"
            android:ems="10"
            android:hint="Enter Description "
            android:padding="15dp"
            android:inputType="none|text"
            android:textSize="18sp" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="87dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="7dp"
            >

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Date"
                android:textStyle="bold"
                android:padding="10dp" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="Time"
                android:textStyle="bold"
                android:layout_alignTop="@+id/txtTime" />

            <EditText
                android:id="@+id/txtDate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Enter date"
                android:inputType="date"
                android:focusable="false"
                android:padding="10dp"
                android:layout_alignLeft="@+id/txtTime"
                android:layout_alignStart="@+id/txtTime" />

            <EditText
                android:id="@+id/txtTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:ems="10"
                android:inputType="time"
                android:focusable="false"
                android:hint="Enter time"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:padding="10dp"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="80dp">

            <Button
                android:id="@+id/btnUpdateAppointment"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_below="@+id/aptDescription"
                android:layout_margin="16dp"
                android:layout_marginTop="65dp"
                android:layout_toEndOf="@+id/aptLocation"
                android:layout_toRightOf="@+id/aptLocation"
                android:layout_weight="1"
                android:background="#B3E5FC"
                android:onClick="btn_UpdateAppointmentClick"
                android:text="Update" />

            <Button
                android:id="@+id/btnDelete"
                android:layout_width="90dp"
                android:layout_height="50dp"
                android:layout_below="@+id/aptDescription"
                android:layout_margin="16dp"
                android:layout_marginTop="65dp"
                android:layout_toEndOf="@+id/aptLocation"
                android:layout_toRightOf="@+id/aptLocation"
                android:layout_weight="1"
                android:background="#B3E5FC"
                android:onClick="btn_AddAppointmentClick"
                android:text="Delete" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>

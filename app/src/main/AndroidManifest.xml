<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="sg.edu.nus.medipalapplication">

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED"/>
    <uses-permission android:name="android.permission.VIBRATE"/>
    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <!--Splash Screen-->
        <activity
            android:name=".activity.SplashScreenActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.Black.NoTitleBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name=".MainActivity"></activity>

        <activity
            android:name=".activity.PersonActivity"
            android:label="@string/person_tab"></activity>

        <activity
            android:name=".activity.AppointmentActivity"
            android:label="@string/add_appointment"></activity>

        <activity
            android:name=".activity.SaveAppointmentActivity"
            android:label="@string/save_appointment"></activity>

        <activity
            android:name=".activity.MedicineActivity"
            android:label="@string/medicine"></activity>
        <activity
            android:name=".activity.MedicineAddActivity"
            android:label="@string/add_medicine"></activity>
        <activity
            android:name=".activity.MedicineEditActivity"
            android:label="@string/edit_medicine"></activity>

        <activity
            android:name=".activity.CategoryActivity"
            android:label="@string/category"></activity>
        <activity
            android:name=".activity.CategoryEditActivity"
            android:label="@string/edit_category"></activity>

        <activity
            android:name=".activity.AddReminderActivity"
            android:label="@string/add_reminder"></activity>

        <activity
            android:name=".activity.ConsumptionTabsActivity"
            android:label="@string/consumption"
            android:theme="@style/TabLayoutTheme"></activity>

        <activity
            android:name=".activity.ICETabLayoutActivity"
            android:label="@string/ice"
            android:theme="@style/TabLayoutTheme"></activity>

        <activity
            android:name=".activity.AddReminderTestActivity"
            android:label="Edit Category"></activity>

        <receiver android:name=".activity.ReminderSetter">
            <intent-filter>
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
         </receiver>

        <receiver android:name=".service.ReminderReceiver"></receiver>
        <service android:name=".service.ReminderService"></service>

    </application>

</manifest>